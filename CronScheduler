name: Cron Scheduler

on:
  schedule:
    # Runs every minute
    - cron: '* * * * *'
  workflow_dispatch:  # Allows manual trigger

jobs:
  trigger-scheduler:
    runs-on: ubuntu-latest
    steps:
      - name: Trigger EasyCron Scheduler
        run: |
          curl -X POST "https://ta-01k98d160fn9p4aaszgcmfjr4z-5173.wo-pk3m9d6kplfhetx6jnp0wi5g3.w.modal.host/api/functions/cronScheduler"
        continue-on-error: true
