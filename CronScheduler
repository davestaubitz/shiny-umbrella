name: Cron Scheduler

on:
  schedule:
    # Runs every minute
    - cron: '* * * * *'
  workflow_dispatch:  # Allows manual trigger

jobs:
  trigger-scheduler:
    runs-on: ubuntu-latest
    steps:
      - name: Trigger Tikk Scheduler
        run: |
          curl -X POST "https://ta-01k9aa4pxzqmzawf5g0wphcfks-5173.wo-liueqrkil6bddt9p9enz1zp0g.w.modal.host/api/functions/cronScheduler"
        continue-on-error: true